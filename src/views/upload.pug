extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", type="text", required, maxlength=20)
        input(name="description", placeholder="Description", type="text", required, minlength=5)
        input(name="hashtags", placeholder="Hashtags, seperated by comma", type="text", required)
        input(type="submit", value="Upload Video")